/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding-bottom: 10rpx;
}

.tab-control-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #555;
}

.active .text {
  color: #ff5777;
  padding: 10rpx 6rpx;
  border-bottom: 6rpx solid red;
}